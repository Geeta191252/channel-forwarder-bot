# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# MongoDB Connection String (from MongoDB Atlas or your MongoDB server)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/telegram_forwarder?retryWrites=true&w=majority

# Server Port (Koyeb uses 8000 by default)
PORT=8000

# Webhook URL (set after deploying to Koyeb)
# WEBHOOK_URL=https://your-app.koyeb.app/webhook

# Admin User ID (your Telegram user ID for admin panel access)
# Get your ID from @userinfobot or @RawDataBot
ADMIN_USER_ID=your_telegram_user_id

# Force Subscribe Channels (comma-separated channel IDs)
# For private channels/groups, use channel ID like: -1001234567890
# Get channel ID by forwarding a message from channel to @userinfobot
FORCE_SUB_CHANNELS=-1001234567890

# Channel Names for Display (comma-separated, same order as FORCE_SUB_CHANNELS)
FORCE_SUB_CHANNEL_NAMES=Update Channel 1

# Invite Links for Private Channels/Groups (comma-separated, same order)
# Get invite link from channel/group settings
FORCE_SUB_LINKS=https://t.me/+ABC123XYZ

# Required Referrals to Unlock Bot (default: 10)
# Set to 0 to disable referral requirement
REQUIRED_REFERRALS=10